{
  "name": "@emeraldcoder/riichi-ui-css",
  "version": "0.0.0-beta.5",
  "license": "MIT",
  "description": "CSS UI components riichi mahjong related application",
  "author": "EmeraldCoder",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EmeraldCoder/riichi-ui.git"
  },
  "bugs": {
    "url": "https://github.com/EmeraldCoder/riichi-ui/issues"
  },
  "homepage": "https://github.com/EmeraldCoder/riichi-ui",
  "keywords": [
    "Riichi",
    "Mahjong",
    "UI Components"
  ],
  "files": [
    "build",
    "assets",
    "src/**/*.scss"
  ],
  "scripts": {
    "build": "rimraf build && sass src/index.scss build/riichi-ui.css && sass --style=compressed src/index.scss build/riichi-ui.min.css",
    "storybook:dev": "storybook dev -p 8080",
    "storybook:build": "storybook build --docs",
    "storybook:docs": "storybook dev --docs -p 8081",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.0.0",
    "@storybook/addon-interactions": "^8.0.0",
    "@storybook/addon-links": "^8.0.0",
    "@storybook/html-vite": "^8.0.0",
    "clean-package": "^2.0.0",
    "rimraf": "^5.0.0",
    "sass": "^1.0.0",
    "storybook": "^8.0.0",
    "vite": "^6.0.0"
  }
}
